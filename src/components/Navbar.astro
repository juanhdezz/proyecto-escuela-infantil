---
const navItems = [
  { name: 'Inicio', path: '/' },
  { name: 'Nosotros', path: '/about' },
  { name: 'Actividades', path: '/activities' },
  { name: 'Galería', path: '/gallery' },
  { name: 'Contacto', path: '/contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 w-full bg-white shadow-md">
  <div class="container-custom py-3">
    <nav class="flex flex-wrap items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <div class="w-12 h-12 bg-primary-500 rounded-full flex items-center justify-center">
          <span class="text-white font-display text-xl">VL</span>
        </div>
        <div>
          <span class="font-display text-primary-800 text-xl block leading-tight">Virgen de Loreto</span>
          <span class="text-sm text-gray-600 block leading-tight">Escuela Infantil</span>
        </div>
      </a>

      <!-- Mobile menu button -->
      <button id="menu-toggle" class="md:hidden p-2 rounded-md text-gray-700 hover:bg-gray-100 focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- Desktop Navigation -->
      <div id="menu" class="hidden md:flex w-full md:w-auto mt-4 md:mt-0">
        <ul class="flex flex-col md:flex-row md:space-x-6 space-y-2 md:space-y-0">
          {navItems.map(item => (
            <li>
              <a 
                href={item.path} 
                class={`block py-2 px-3 md:p-0 text-lg transition-colors duration-200 rounded-md ${currentPath === item.path ? 'text-primary-700 font-semibold' : 'text-gray-600 hover:text-primary-600'}`}
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact button -->
      <a href="/contact" class="hidden md:block btn btn-primary ml-6">
        Matricúlate
      </a>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuToggle = document.getElementById('menu-toggle');
  const menu = document.getElementById('menu');

  menuToggle?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>